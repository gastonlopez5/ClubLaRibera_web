                            <div class="footer_widget_title"> <h2>Redes Sociales</h2> </div>
                            <div class="widget_about_info_social">
                                <a href="https://www.facebook.com/Club-Deportivo-La-Ribera-Villa-Mercedes-San-Luis-2287714841487000/" class="fab fa-facebook-f"></a>
                                <a href="https://www.instagram.com/clubdeportivo_laribera/?hl=es-la" class="fab fa-instagram"></a>
                            </div>
                        </aside>
                        <aside class="widget col-md-6 widget_about_info">
                            <div class="footer_widget_title"> <h2>Contactanos</h2> </div>
                            <ul>
                                <li><i class="fa fa-map-marker-alt"></i>Jorge Gabriel Pujol, Villa Mercedes, San Luis</li>
                                <li><i class="fa fa-phone"></i> (+54) 2657 50-0027</li>
                                <li><i class="fa fa-envelope"></i> clubdeportivolariberavm@hotmail.com</li>
                            </ul>
                        </aside>
                    </div>
                </div>
            </div>
            <!--// Footer Widget //-->
            <!--// Footer CopyRight //-->
            <div class="ritekhela-copyright">
                <div class="container">
                    <div class="row">
                        <div class="col-md-12">
                            <a href="#" class="ritekhela-back-top"><i class="fa fa-angle-up"></i></a>
                        </div>
                    </div>
                </div>
            </div>
            <!--// Footer CopyRight //-->

        </footer>
        <!--// Footer //-->
    </div>

    <!--// Search ModalBox //-->
    <div class="loginmodalbox modal fade" id="ritekhelamodalsearch" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-body ritekhela-bgcolor-two">
                    <h5 class="modal-title">Busca en este sitio</h5>
                    <a href="#" class="close ritekhela-bgcolor-two" data-dismiss="modal" aria-label="Close">
                        <i class="fa fa-times"></i>
                    </a>
                    <form>
                        <input type="text" value="Escribe algo para buscar" onblur="if(this.value == '') { this.value ='Escribe algo para buscar'; }" onfocus="if(this.value =='Escribe algo para buscar') { this.value = ''; }">
                        <input type="submit" value="Buscar" class="ritekhela-bgcolor">
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- jQuery -->
   
    <script src="~/script/jquery.js"></script>
    <script src="~/script/popper.min.js"></script>
    <script src="~/script/bootstrap.min.js"></script>
    <script src="~/script/slick.slider.min.js"></script>
    <script src="~/script/jquery.fancybox.min.js"></script>
    <script src="~/script/isotope.min.js"></script>
    <script src="~/script/smartmenus.min.js"></script>
    <script src="~/script/progressbar.js"></script>
    <script src="~/script/jquery.countdown.min.js"></script>
    <script src="~/script/functions.js"></script>



    <script>
        $('[data-fancybox]').fancybox({
            animationEffect: "slide",
            transitionEffect: "circular",
            loop: true,
            buttons: [
                "slideShow",
                "fullScreen",
                "download",
                "close"
            ]
        });

        function modalLogin() {
            var abrirModal = () => {
                $('#ritekhelamodalcenter').modal("show");
            }

            $.ajax({
                    url: `@Url.Action("LoginModal", "Usuarios")`,
                }).done(res => {
                    console.log("Modal: ", res);
                    var div = document.createElement("div");
                    div.innerHTML = res;
                    document.body.appendChild(div);
                    abrirModal();
                }).fail(res => {
                    console.log("Error: ", res);
                });
        }
        function modalRegistro() {
            var abrirModal = () => {
                $('#registrarUsuario').modal("show");
            }

            $.ajax({
                    url: `@Url.Action("RegistroModal", "Usuarios")`,
                }).done(res => {
                    console.log("Modal: ", res);
                    var div = document.createElement("div");
                    div.innerHTML = res;
                    document.body.appendChild(div);
                    abrirModal();
                }).fail(res => {
                    console.log("Error: ", res);
                });
        }
    </script>
    
    
    @RenderSection("Scripts", required: false)
</body>
</html>
