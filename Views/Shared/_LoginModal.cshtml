@model WebApplication1.Models.LoginView

<div class="loginmodalbox modal fade" id="ritekhelamodalcenter" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-body ritekhela-bgcolor-two">
                <h5 class="modal-title">Ingresa a tu cuenta</h5>
                <a href="#" class="close ritekhela-bgcolor-two" data-dismiss="modal" aria-label="Close">
                    <i class="fa fa-times"></i>
                </a>
                <form asp-action="Login" class="loginmodalbox-search">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <input asp-for="Email" class="form-control" type="email" value="Email" onblur="if(this.value == '') { this.value ='Email'; }" onfocus="if(this.value =='Email') { this.value = ''; }" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="Clave" class="form-control" type="password" value="Clave" onblur="if(this.value == '') { this.value ='Clave'; }" onfocus="if(this.value =='Clave') { this.value = ''; }" />
                        <span asp-validation-for="Clave" class="text-danger"></span>
                    </div>
                    <input type="submit" value="Ingresar" class="ritekhela-bgcolor">
                </form>
                <form asp-action="Registrar" class="loginmodalbox-search">
                    <input type="submit" value="Registrarme" class="ritekhela-bgcolor">
                    <a href="#" class="loginmodalbox-forget">¿Olvidaste tu contraseña?</a>
                </form>
            </div>
        </div>
    </div>
</div>